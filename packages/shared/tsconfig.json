{
    "compilerOptions": {
      "target": "es2017",          // Targets modern JavaScript features
      "module": "commonjs",        // Uses CommonJS module system for Node.js compatibility
      "declaration": true,         // Generates .d.ts files for type definitions
      "outDir": "./dist",         // Places compiled files in a 'dist' directory
      "rootDir": "./src",         // Specifies where your source files are
      "strict": true,             // Enables strict type checking
      "esModuleInterop": true,    // Helps with module compatibility
      "skipLibCheck": true,       // Speeds up compilation by skipping type checking of declaration files
      "forceConsistentCasingInFileNames": true,  // Ensures consistent file naming
      "moduleResolution": "node"  // Uses Node.js-style module resolution
    },
    "include": ["src/**/*"],     // Includes all files under the src directory
    "exclude": ["node_modules", "dist"]  // Excludes node_modules and compiled output
  }